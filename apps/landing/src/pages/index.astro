---
import Layout from '../layouts/BaseLayout.astro';
import '../styles/portfolio.css';

// Stock Predictor live URL (ensure this is set on Vercel as VITE_STOCK_URL)
const STOCK_URL    = import.meta.env.VITE_STOCK_URL;

// Budgetor live URL—currently no link, so we leave it blank
const BUDGETOR_URL = '';

// GitHub & LinkedIn (replace with your actual LinkedIn URL)
const STOCK_GITHUB   = 'https://github.com/tshore2004/stock-predictor-web';
const BUDGETOR_GITHUB = 'https://github.com/tshore2004/Budgetor';
const LINKEDIN_URL   = 'https://www.linkedin.com/in/your-linkedin-username/';
const RESUME_PATH    = '/resume.pdf'; // Place resume.pdf in apps/landing/public/
---

<Layout title="Thomas Shore – Portfolio">
  <!-------------------- SITE HEADER -------------------->
  <header class="site-header">
    <div class="header-content">
      <h1 class="site-title">Thomas Shore</h1>
      <nav class="header-nav">
        <a href={LINKEDIN_URL} class="header-link" target="_blank" rel="noopener noreferrer">LinkedIn</a>
        <a href={STOCK_GITHUB} class="header-link" target="_blank" rel="noopener noreferrer">GitHub</a>
        <a href={RESUME_PATH} class="header-link" download>Resume</a>
      </nav>
    </div>
  </header>

  <!-------------------- MAIN CONTENT -------------------->
  <div class="projects-container">
    <p class="intro">
      Welcome! Below are two of my CSE projects. You can interact directly via the embedded view (Stock Predictor), or click “Open in New Tab” for a full-screen experience—and feel free to review the code on GitHub. Budgetor is coming soon, but you can browse its code in the meantime.
    </p>

    <!-------------------- STOCK PREDICTOR CARD -------------------->
    <section class="project-card">
      <div class="project-header">
        <h2 class="project-title">Stock Predictor</h2>
        <p class="project-desc">
          A React + FastAPI application leveraging an LSTM neural network to predict short‐term stock movement. Deployed on Vercel.
        </p>
      </div>

      <div class="iframe-wrapper">
        <iframe
          src={STOCK_URL}
          frameborder="0"
          allow="accelerometer; autoplay; encrypted‐media; gyroscope; picture‐in‐picture"
          allowfullscreen
          title="Stock Predictor Live Demo"
        ></iframe>
      </div>

      <div class="button-row">
        <a
          href={STOCK_URL}
          class="button button-live"
          target="_blank"
          rel="noopener noreferrer"
        >
          Open in New Tab
        </a>
        <a
          href={STOCK_GITHUB}
          class="button button-github"
          target="_blank"
          rel="noopener noreferrer"
        >
          View Code on GitHub
        </a>
      </div>
    </section>

    <!-------------------- BUDGETOR CARD -------------------->
    <section class="project-card">
      <div class="project-header">
        <h2 class="project-title">Budgetor</h2>
        <p class="project-desc">
          A full‐stack budgeting application (Astro + Node.js + MongoDB) that lets users track income and expenses in real time.
        </p>
      </div>

      <div class="iframe-wrapper placeholder">
        <span class="coming-soon">Coming Soon</span>
      </div>

      <div class="button-row">
        <!-- Disabled “Open in New Tab” -->
        <a
          href="#"
          class="button button-live button-disabled"
          aria-disabled="true"
          title="Budgetor live demo coming soon"
        >
          Open in New Tab
        </a>

        <!-- GitHub link stays active if repo exists -->
        <a
          href={BUDGETOR_GITHUB}
          class="button button-github"
          target="_blank"
          rel="noopener noreferrer"
        >
          View Code on GitHub
        </a>
      </div>
    </section>
  </div>
</Layout>
