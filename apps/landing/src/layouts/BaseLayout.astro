---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body style="font-family: system-ui; max-width: 42rem; margin: 2rem auto;">
    <header>
      <h1>{title}</h1>
    </header>

    <main>
      <slot />           <!-- page content gets injected here -->
    </main>

    <footer style="margin-top:2rem; font-size:0.875rem;">
      © {new Date().getFullYear()} Thomas Shore
    </footer>
  </body>
</html>
