---
import Layout from '../layouts/BaseLayout.astro';
import '../styles/portfolio.css';

// Live URLs (ensure VITE_STOCK_URL is set on Vercel or in apps/landing/.env)
const STOCK_URL     = import.meta.env.VITE_STOCK_URL;
const BUDGETOR_URL  = ''; // Budgetor not live yet

// External links
const LINKEDIN_URL  = 'https://www.linkedin.com/in/thomas-shore/';
const GITHUB_URL    = 'https://github.com/tshore2004';
const EMAIL_ADDRESS = 'thomas.shore@osu.edu';
const EMAIL_LINK    = `mailto:${EMAIL_ADDRESS}`;
const RESUME_PATH   = '/SHORE_THOMAS_RESUME.pdf'; // Put your PDF into apps/landing/public/
---
<Layout title="Thomas Shore – Portfolio">
  <!--─────────────────────────────────────────────────────────────────────────
    HEADER (HERO + NAV)
  ──────────────────────────────────────────────────────────────────────────-->
  <header class="site-header">
    <div class="header-content">
      <div class="hero-text">
        <h1 class="site-title">Thomas Shore</h1>
        <p class="site-subtitle">Computer Science & Engineering Student</p>
      </div>
      <nav class="header-nav">
        <a href={EMAIL_LINK}   class="header-button" title="Email Me">✉️ Email</a>
        <a href={LINKEDIN_URL} class="header-button" target="_blank" rel="noopener noreferrer">LinkedIn</a>
        <a href={GITHUB_URL}   class="header-button" target="_blank" rel="noopener noreferrer">GitHub</a>
        <a href="#resume"       class="header-button">Resume</a>
      </nav>
    </div>
  </header>

  <!--─────────────────────────────────────────────────────────────────────────
    ABOUT / INTRO SECTION
  ──────────────────────────────────────────────────────────────────────────-->
  <section class="about-section">
    <div class="about-content">
      <p>
        Hello! I’m currently pursuing a degree in Computer Science & Engineering at The Ohio State University.  
        My work spans full-stack applications, AI models, and efficient algorithms.  
        Feel free to explore my projects below or download my resume.
      </p>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    PROJECTS SECTION
  ──────────────────────────────────────────────────────────────────────────-->
  <section class="projects-section">
    <h2 class="section-heading">Projects</h2>
    <div class="projects-grid">
      <!-- STOCK PREDICTOR CARD -->
      <div class="project-card">
        <div class="card-header">
          <h3 class="card-title">Stock Predictor</h3>
          <p class="card-desc">
            React + FastAPI app that uses an LSTM neural network to predict short-term stock movement. Deployed on Vercel.
          </p>
        </div>
        <div class="card-iframe">
          <iframe
            src={STOCK_URL}
            title="Stock Predictor Demo"
            frameborder="0"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
        <div class="card-buttons">
          <a href={STOCK_URL} class="button button-live" target="_blank" rel="noopener noreferrer">
            Live Demo ↗
          </a>
          <a href={GITHUB_URL + '/stock-predictor-web'} class="button button-github" target="_blank" rel="noopener noreferrer">
            View Code
          </a>
        </div>
      </div>

      <!-- BUDGETOR CARD -->
      <div class="project-card">
        <div class="card-header">
          <h3 class="card-title">Budgetor</h3>
          <p class="card-desc">
            Full-stack budgeting application (Astro + Node.js + MongoDB) to track income and expenses.  
            (Coming Soon)
          </p>
        </div>
        <div class="card-placeholder">
          <span class="coming-soon">Coming Soon</span>
        </div>
        <div class="card-buttons">
          <a href="#" class="button button-live button-disabled" aria-disabled="true">Live Demo</a>
          <a href={GITHUB_URL + '/Budgetor'} class="button button-github" target="_blank" rel="noopener noreferrer">
            View Code
          </a>
        </div>
      </div>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    RESUME SECTION (EMBED + DOWNLOAD)
  ──────────────────────────────────────────────────────────────────────────-->
  <section id="resume" class="resume-section">
    <h2 class="section-heading">Resume</h2>
    <div class="resume-container">
      <object
        data={RESUME_PATH}
        type="application/pdf"
        class="resume-object"
        aria-label="Thomas Shore Resume"
      >
        <p>
          Your browser does not support embedded PDFs.  
          <a href={RESUME_PATH} class="button button-download">Download Resume</a>
        </p>
      </object>
      <a href={RESUME_PATH} class="button button-download" download>
        Download Resume
      </a>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    FOOTER
  ──────────────────────────────────────────────────────────────────────────-->
  <footer class="site-footer">
    <p>© {new Date().getFullYear()} Thomas Shore. All rights reserved.</p>
  </footer>
</Layout>
