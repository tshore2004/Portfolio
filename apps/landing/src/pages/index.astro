---
import Layout from '../layouts/BaseLayout.astro';

// Import the external stylesheet:
import '../styles/portfolio.css';

// Live URLs (set these in your .env file, e.g. VITE_STOCK_URL, VITE_BUDGETOR_URL)
const STOCK_URL    = import.meta.env.VITE_STOCK_URL;
const BUDGETOR_URL = import.meta.env.VITE_BUDGETOR_URL;

// GitHub URLs for each project (update if your repo paths differ)
const STOCK_GITHUB    = 'https://github.com/tshore2004/stock-predictor-web';
const BUDGETOR_GITHUB = 'https://github.com/tshore2004/Budgetor';
---

<Layout title="Thomas Shore ‚Äì Portfolio">
  <section class="projects-container">
    <h1>Hi, I‚Äôm Thomas üëã</h1>
    <p class="intro">
      Here are a few of my CSE projects. Click ‚ÄúLive Demo‚Äù to see each in action, or ‚ÄúGitHub‚Äù to browse the source.
    </p>

    <div class="projects">
      <!-- STOCK PREDICTOR CARD -->
      <article class="card">
        <div class="card-content">
          <h2>Stock Predictor</h2>
          <p>
            A React + FastAPI app that predicts short-term stock movement using an LSTM neural network. Deployed on Vercel.
          </p>
        </div>
        <div class="card-footer">
          <a
            href={STOCK_URL}
            class="button demo"
            target="_blank"
            rel="noopener noreferrer"
          >
            Live Demo
          </a>
          <a
            href={STOCK_GITHUB}
            class="button github"
            target="_blank"
            rel="noopener noreferrer"
          >
            GitHub
          </a>
        </div>
      </article>

      <!-- BUDGETOR CARD -->
      <article class="card">
        <div class="card-content">
          <h2>Budgetor</h2>
          <p>
            A full-stack budgeting application (Astro + Node.js + MongoDB) that helps users track income and expenses in real time.
          </p>
        </div>
        <div class="card-footer">
          <a
            href={BUDGETOR_URL}
            class="button demo"
            target="_blank"
            rel="noopener noreferrer"
          >
            Live Demo
          </a>
          <a
            href={BUDGETOR_GITHUB}
            class="button github"
            target="_blank"
            rel="noopener noreferrer"
          >
            GitHub
          </a>
        </div>
      </article>
    </div>
  </section>
</Layout>
