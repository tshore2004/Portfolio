---
import Layout from '../layouts/BaseLayout.astro';
import '../styles/portfolio.css';

// LIVE URL (ensure this is set in apps/landing/.env or Vercel)
const STOCK_URL     = import.meta.env.VITE_STOCK_URL;
const BUDGETOR_URL  = ''; // not live yet

// EXTERNAL LINKS
const LINKEDIN_URL  = 'https://www.linkedin.com/in/thomas-shore/';
const GITHUB_URL    = 'https://github.com/tshore2004';
const EMAIL_ADDRESS = 'shore.74@osu.edu';
const EMAIL_LINK    = `mailto:${EMAIL_ADDRESS}`;
const RESUME_PATH   = '/Shore_Thomas_Resume.pdf'; // Put PDF in apps/landing/public/
---

<Layout title="Thomas Shore – Portfolio">
  <!--─────────────────────────────────────────────────────────────────────────
    NAVBAR (IN-PAGE LINKS)
  ──────────────────────────────────────────────────────────────────────────-->
  <nav class="navbar">
    <div class="navbar-container">
      <div class="navbar-logo">Thomas Shore</div>
      <ul class="navbar-links">
        <li><a href="#hero">Home</a></li>
        <li><a href="#projects">Projects</a></li>
        <li><a href="#about-me">About</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </div>
  </nav>

  <!--─────────────────────────────────────────────────────────────────────────
    HERO (HOME) SECTION
  ──────────────────────────────────────────────────────────────────────────-->
  <section id="hero" class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">Thomas Shore</h1>
      <p class="hero-subtitle">Computer Science &amp; Engineering Student</p>
      <div class="hero-buttons">
        <a href={EMAIL_LINK} class="button button-hero" title="Email Me">✉️ Email</a>
        <a href={LINKEDIN_URL} class="button button-hero" target="_blank" rel="noopener noreferrer">LinkedIn</a>
        <a href={GITHUB_URL} class="button button-hero" target="_blank" rel="noopener noreferrer">GitHub</a>
      </div>
    </div>
    <div class="hero-arrow">
      <a href="#projects">⌄</a>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    PROJECTS SECTION
  ──────────────────────────────────────────────────────────────────────────-->
  <section id="projects" class="projects-section">
    <h2 class="section-heading">Projects</h2>
    <div class="projects-grid">
      <!-- STOCK PREDICTOR CARD -->
      <article class="project-card">
        <div class="card-top">
          <h3 class="card-title">Stock Predictor</h3>
          <p class="card-desc">
            React + FastAPI app using an LSTM neural network to forecast short‐term stock movements. Deployed on Vercel.
          </p>
        </div>
        <div class="card-demo">
          <iframe
            src={STOCK_URL}
            title="Stock Predictor Demo"
            frameborder="0"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
        <div class="card-actions">
          <a href={STOCK_URL} class="button button-live" target="_blank" rel="noopener noreferrer">
            Live Demo ↗
          </a>
          <a href={GITHUB_URL + '/stock-predictor-web'} class="button button-github" target="_blank" rel="noopener noreferrer">
            View Code
          </a>
        </div>
      </article>

      <!-- BUDGETOR CARD -->
      <article class="project-card">
        <div class="card-top">
          <h3 class="card-title">Budgetor</h3>
          <p class="card-desc">
            Full-stack budgeting app (Astro + Node.js + MongoDB) to track income and expenses in real time.  
            <span class="coming-soon-inline">Coming Soon</span>
          </p>
        </div>
        <div class="card-placeholder">
          <span class="coming-soon-badge">Coming Soon</span>
        </div>
        <div class="card-actions">
          <a href="#" class="button button-live button-disabled" aria-disabled="true">
            Live Demo
          </a>
          <a href={GITHUB_URL + '/Budgetor'} class="button button-github" target="_blank" rel="noopener noreferrer">
            View Code
          </a>
        </div>
      </article>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    ABOUT ME SECTION
  ──────────────────────────────────────────────────────────────────────────-->
  <section id="about-me" class="about-section">
    <div class="about-inner">
      <p>
        I am a junior studying Computer Science &amp; Engineering at The Ohio State University, passionate about building full‐stack web applications, exploring machine learning, and designing efficient algorithms.  
        When I’m not coding, I enjoy solving puzzles, contributing to open‐source, and researching new AI/ML techniques.
      </p>
      <div class="about-button-row">
        <a href={RESUME_PATH} class="button button-view-resume" target="_blank" rel="noopener noreferrer">
          View Resume
        </a>
      </div>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    CONTACT SECTION
  ──────────────────────────────────────────────────────────────────────────-->
  <section id="contact" class="contact-section">
    <h2 class="section-heading">Contact</h2>
    <div class="contact-grid">
      <!-- Email Card -->
      <div class="contact-card">
        <h3 class="contact-title">Email</h3>
        <a href={EMAIL_LINK} class="contact-link">{EMAIL_ADDRESS}</a>
      </div>

      <!-- LinkedIn Card -->
      <div class="contact-card">
        <h3 class="contact-title">LinkedIn</h3>
        <a href={LINKEDIN_URL} class="contact-link" target="_blank" rel="noopener noreferrer">View Profile ↗</a>
      </div>

      <!-- GitHub Card -->
      <div class="contact-card">
        <h3 class="contact-title">GitHub</h3>
        <a href={GITHUB_URL} class="contact-link" target="_blank" rel="noopener noreferrer">View Repositories ↗</a>
      </div>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    FOOTER
  ──────────────────────────────────────────────────────────────────────────-->
  <footer class="site-footer">
    <p>© {new Date().getFullYear()} Thomas Shore. All rights reserved.</p>
  </footer>
</Layout>
