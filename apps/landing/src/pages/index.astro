---
import Layout from '../layouts/BaseLayout.astro';
import '../styles/portfolio.css';

// Live URLs (ensure VITE_STOCK_URL is set on Vercel or in apps/landing/.env)
const STOCK_URL     = import.meta.env.VITE_STOCK_URL;
const BUDGETOR_URL  = ''; // Budgetor not live yet—leaving blank

// External links (replace with your actual email / LinkedIn)
const LINKEDIN_URL  = 'https://www.linkedin.com/in/thomas-shore/';
const GITHUB_URL    = 'https://github.com/tshore2004';
const EMAIL_ADDRESS = 'shore.74@osu.edu';
const EMAIL_LINK    = `mailto:${EMAIL_ADDRESS}`;
const RESUME_PATH   = '/SHORE_THOMAS_RESUME.pdf';
---

<Layout title="Thomas Shore – Portfolio">
  <!--─────────────────────────────────────────────────────────────────────────
    SITE HEADER
  ──────────────────────────────────────────────────────────────────────────-->
  <header class="site-header">
    <div class="header-content">
      <h1 class="site-title">Thomas Shore</h1>
      <nav class="header-nav">
        <a href={EMAIL_LINK}   class="header-button" title="Email Me">Email</a>
        <a href={LINKEDIN_URL} class="header-button" target="_blank" rel="noopener noreferrer">LinkedIn</a>
        <a href={GITHUB_URL}   class="header-button" target="_blank" rel="noopener noreferrer">GitHub</a>
        <a href="#resume"       class="header-button">Resume</a>
      </nav>
    </div>
  </header>

  <!--─────────────────────────────────────────────────────────────────────────
    ABOUT ME SECTION
  ──────────────────────────────────────────────────────────────────────────-->
  <section class="intro-section">
    <p>
      Hello! I’m a Computer Science &amp; Engineering student at <strong>The Ohio State University</strong>.  
      You can reach me at <a href={EMAIL_LINK} class="email-link">{EMAIL_ADDRESS}</a>.
    </p>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    PROJECT CARDS
  ──────────────────────────────────────────────────────────────────────────-->
  <div class="projects-container">
    <p class="intro">
      Below are two of my CSE projects. You can interact directly via the embedded view (Stock Predictor), or click “Open in New Tab” for a full-screen experience—and feel free to review the code on GitHub. Budgetor is coming soon, but you can browse its code in the meantime.
    </p>

    <!-- STOCK PREDICTOR CARD -->
    <section class="project-card">
      <div class="project-header">
        <h2 class="project-title">Stock Predictor</h2>
        <p class="project-desc">
          A React + FastAPI application leveraging an LSTM neural network to predict short-term stock movement. Deployed on Vercel.
        </p>
      </div>

      <div class="iframe-wrapper">
        <iframe
          src={STOCK_URL}
          frameborder="0"
          allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          title="Stock Predictor Live Demo"
        ></iframe>
      </div>

      <div class="button-row">
        <a
          href={STOCK_URL}
          class="button button-live"
          target="_blank"
          rel="noopener noreferrer"
        >
          Open in New Tab
        </a>
        <a
          href={GITHUB_URL + '/stock-predictor-web'}
          class="button button-github"
          target="_blank"
          rel="noopener noreferrer"
        >
          View Code on GitHub
        </a>
      </div>
    </section>

    <!-- BUDGETOR CARD -->
    <section class="project-card">
      <div class="project-header">
        <h2 class="project-title">Budgetor</h2>
        <p class="project-desc">
          A full-stack budgeting application (Astro + Node.js + MongoDB) that lets users track income and expenses in real time.
        </p>
      </div>

      <div class="iframe-wrapper placeholder">
        <span class="coming-soon">Coming Soon</span>
      </div>

      <div class="button-row">
        <!-- Disabled “Open in New Tab” for now -->
        <a
          href="#"
          class="button button-live button-disabled"
          aria-disabled="true"
          title="Budgetor live demo coming soon"
        >
          Open in New Tab
        </a>
        <a
          href={GITHUB_URL + '/Budgetor'}
          class="button button-github"
          target="_blank"
          rel="noopener noreferrer"
        >
          View Code on GitHub
        </a>
      </div>
    </section>
  </div>

  <!--─────────────────────────────────────────────────────────────────────────
    RESUME SECTION (EMBED + DOWNLOAD)
  ──────────────────────────────────────────────────────────────────────────-->
  <section id="resume" class="resume-section">
    <h2 class="section-title">Resume</h2>
    <div class="resume-container">
      <iframe
        src={RESUME_PATH}
        class="resume-iframe"
        title="Thomas Shore Resume"
      ></iframe>
      <a
        href={RESUME_PATH}
        class="button button-download"
        download
      >
        Download Resume
      </a>
    </div>
  </section>
</Layout>
