---
import Layout from '../layouts/BaseLayout.astro';
import '../styles/portfolio.css';

// LIVE URL (set VITE_STOCK_URL in Vercel or apps/landing/.env)
const STOCK_URL     = import.meta.env.VITE_STOCK_URL;
const BUDGETOR_URL  = ''; // not live yet

// EXTERNAL LINKS
const LINKEDIN_URL  = 'https://www.linkedin.com/in/thomas-shore/';
const GITHUB_URL    = 'https://github.com/tshore2004';
const EMAIL_ADDRESS = 'shore.74@osu.edu';
const EMAIL_LINK    = `mailto:${EMAIL_ADDRESS}`;
const RESUME_PATH   = '/Shore_Thomas_Resume.pdf';
---

<Layout title="Thomas Shore – Portfolio">
  <!--─────────────────────────────────────────────────────────────────────────
    HEADER / HERO
  ──────────────────────────────────────────────────────────────────────────-->
  <header class="site-header">
    <div class="header-container">
      <div class="hero-text">
        <h1 class="hero-title">Thomas Shore</h1>
        <p class="hero-subtitle">Computer Science &amp; Engineering Student</p>
      </div>
      <nav class="hero-links">
        <a href={EMAIL_LINK}   class="hero-button" title="Email Me">✉️ Email</a>
        <a href={LINKEDIN_URL} class="hero-button" target="_blank" rel="noopener noreferrer">LinkedIn</a>
        <a href={GITHUB_URL}   class="hero-button" target="_blank" rel="noopener noreferrer">GitHub</a>
        <a href="#resume"       class="hero-button">Resume</a>
      </nav>
    </div>
  </header>

  <!--─────────────────────────────────────────────────────────────────────────
    ABOUT / INTRO (BRIEF)
  ──────────────────────────────────────────────────────────────────────────-->
  <section class="about-section">
    <div class="about-inner">
      <p>
        I’m currently pursuing a degree in Computer Science &amp; Engineering at The Ohio State University.  
        My interests include full-stack web applications, machine learning, and data-driven algorithms.  
        Feel free to explore my projects below or scroll to my resume.
      </p>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    PROJECTS GRID
  ──────────────────────────────────────────────────────────────────────────-->
  <section class="projects-section">
    <h2 class="section-heading">Projects</h2>
    <div class="projects-grid">
      <!-- STOCK PREDICTOR CARD -->
      <article class="project-card">
        <div class="card-top">
          <h3 class="card-title">Stock Predictor</h3>
          <p class="card-desc">
            React + FastAPI app using an LSTM neural network to forecast short‐term stock movements. Deployed on Vercel.
          </p>
        </div>
        <div class="card-demo">
          <iframe
            src={STOCK_URL}
            title="Stock Predictor Demo"
            frameborder="0"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
        <div class="card-actions">
          <a href={STOCK_URL} class="button button-live" target="_blank" rel="noopener noreferrer">
            Live Demo ↗
          </a>
          <a href={GITHUB_URL + '/stock-predictor-web'} class="button button-github" target="_blank" rel="noopener noreferrer">
            View Code
          </a>
        </div>
      </article>

      <!-- BUDGETOR CARD -->
      <article class="project-card">
        <div class="card-top">
          <h3 class="card-title">Budgetor</h3>
          <p class="card-desc">
            Full-stack budgeting app (Astro + Node.js + MongoDB) to track income and expenses in real time.  
            <span class="coming-soon-inline">Coming Soon</span>
          </p>
        </div>
        <div class="card-placeholder">
          <span class="coming-soon-badge">Coming Soon</span>
        </div>
        <div class="card-actions">
          <a href="#" class="button button-live button-disabled" aria-disabled="true">
            Live Demo
          </a>
          <a href={GITHUB_URL + '/Budgetor'} class="button button-github" target="_blank" rel="noopener noreferrer">
            View Code
          </a>
        </div>
      </article>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    RESUME SECTION
  ──────────────────────────────────────────────────────────────────────────-->
  <section id="resume" class="resume-section">
    <h2 class="section-heading">Resume</h2>
    <div class="resume-container">
      <object
        data={RESUME_PATH}
        type="application/pdf"
        class="resume-object"
        aria-label="Thomas Shore Resume"
        width="100%"
        height="600"
      >
        <p>
          PDF preview is not supported in this browser.  
          <a href={RESUME_PATH} class="button button-download">Download Resume</a>
        </p>
      </object>
      <a href={RESUME_PATH} class="button button-download" download>
        Download Resume
      </a>
    </div>
  </section>

  <!--─────────────────────────────────────────────────────────────────────────
    FOOTER
  ──────────────────────────────────────────────────────────────────────────-->
  <footer class="site-footer">
    <p>© {new Date().getFullYear()} Thomas Shore. All rights reserved.</p>
  </footer>
</Layout>
